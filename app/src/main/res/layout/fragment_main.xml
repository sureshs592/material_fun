<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/listOfItems"
        android:layout_above="@+id/btnFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/label_bg_thin"/>

            <com.suresh.materialfun.ui.FloatingButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fb_buttonColor="#ffcc1d19"
                app:fb_icon="@drawable/ic_action_new"
                app:fb_button_type="mini"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 2"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/label_bg_thin"/>

            <com.suresh.materialfun.ui.FloatingButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fb_buttonColor="#ffcc1d19"
                app:fb_icon="@drawable/ic_action_new"
                app:fb_button_type="mini"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item 3"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/label_bg_thin"/>

            <com.suresh.materialfun.ui.FloatingButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fb_buttonColor="#ffcc1d19"
                app:fb_icon="@drawable/ic_action_new"
                app:fb_button_type="mini"/>
        </LinearLayout>

    </LinearLayout>



    <com.suresh.materialfun.ui.FloatingButton
        android:id="@+id/btnFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fb_buttonColor="#ffcc1d19"
        app:fb_icon="@drawable/ic_action_new"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
